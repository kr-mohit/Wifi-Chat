<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Card container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_placeholder" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <!-- Greeting -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <!-- Host Mode Button -->
            <Button
                android:id="@+id/btnSendMode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/host_mode"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_this_if_your_device_is_providing_the_wi_fi_hotspot"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- Client Mode Button -->
            <Button
                android:id="@+id/btnReceiveMode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/client_mode"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_this_if_you_are_connecting_to_someone_else_s_hotspot"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- Test Chat Button (hidden by default) -->
            <Button
                android:id="@+id/btnTestChat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/test_chat_ui"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvTestChatDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/try_chat_ui_without_connecting_any_device"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
