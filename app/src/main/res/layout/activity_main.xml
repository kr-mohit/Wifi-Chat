<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#E0E0E0">

    <!-- Card container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_user_placeholder"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:contentDescription="Profile"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <!-- Greeting -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit" />
            </LinearLayout>

            <!-- Host Mode Button -->
            <Button
                android:id="@+id/btnSendMode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Host Mode"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use this if your device is providing the Wi-Fi hotspot."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- Client Mode Button -->
            <Button
                android:id="@+id/btnReceiveMode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Client Mode"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use this if you are connecting to someone elseâ€™s hotspot."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- Test Chat Button (hidden by default) -->
            <Button
                android:id="@+id/btnTestChat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Test Chat UI"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvTestChatDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try chat UI without connecting any device."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
